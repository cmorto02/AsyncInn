@model AsyncInn.Data.Room

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<h1>Details</h1>

<div>
    <h4>Room</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Layout)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Layout)
        </dd>
    </dl>
</div>
<h5>Amenities</h5>
<div>
    <table>
        <thead>
            <tr>
                <th>Amenity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.RoomAmenities)
            {
                <tr>
                    <td>@item.Amenities.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
